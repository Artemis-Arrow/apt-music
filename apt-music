#!/usr/bin/env python3
#ender here the path or the URL to the sound you want to play
def play_sound():
    sound = "/home/nada/التنزيلات/Pirates Of The Caribbean Soundtrack - Main Theme.mp3"
    playsound(sound)

import sys
import os
from threading import Thread
from playsound import playsound

argument = sys.argv[1]
pkgname = sys.argv[2]

thread = Thread(target=play_sound)
thread.start()
os.system("sudo apt " + argument + " " + pkgname)
exit()
